{% extends 'base.html.twig' %}

{% block title %}Utilisateur{% endblock %}
{% block body %}
    <div class="container">
        <div class="row mx-auto my-2">
            <a href="{{ path('utilisateur_liste') }}">Retour</a>
        </div>
        <h1>Utilisateur</h1>
        <table class="table">
            <tbody>
                <tr>
                    <th>Nom</th>
                    <td>{{ utilisateur.nom }}</td>
                </tr>
                <tr>
                    <th>Prenom</th>
                    <td>{{ utilisateur.prenom }}</td>
                </tr>
                <tr>
                    <th>Adresse</th>
                    <td>{{ utilisateur.adresse }}</td>
                </tr>
                <tr>
                    <th>Email</th>
                    <td>{{ utilisateur.email }}</td>
                </tr>
                <tr>
                    <th>Telephone</th>
                    <td>{{ utilisateur.telephone }}</td>
                </tr>
            </tbody>
        </table>
    </div>
{% endblock %}
