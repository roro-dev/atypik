{% extends 'base-bo.html.twig' %}

{% block title %}Liste des logements{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <h1>Liste des logements</h1>
        </div>
    <table class="table">
        <thead>
            <tr>
                <th rowspan="2">Id</th>
                <th rowspan="2">Nom</th>
                <th rowspan="2">Description</th>
                <th colspan="3">Paramètres</th>                
                <th rowspan="2">Prix</th>
                <th rowspan="2"></th>
            </tr>
            <tr>
                <th>NbVoyageur</th>
                <th>NbLits</th>
                <th>NbSalledeBain</th>
            </tr>
        </thead>
        <tbody>
        {% for logement in logements %}
            <tr>
                <td>{{ logement.id }}</td>
                <td>{{ logement.nom }}</td>
                <td>{{ logement.description }}</td>
                <td>{{ logement.nbVoyageur }}</td>
                <td>{{ logement.nbLits }}</td>
                <td>{{ logement.nbSalledeBain }}</td>
                <td>{{ logement.prix }}</td>
                <td>
                    <a href="{{ path('utilisateur_edit', {'id': logement.getIdProprietaire().getId()}) }}">Voir proprio</a>
                    <a href="{{ path('logement_edit', {'id': logement.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">Aucun résultat</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('logement_new') }}">Create new</a>
    </div>
{% endblock %}
