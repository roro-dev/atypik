{% extends 'base-bo.html.twig' %}

{% block title %}Logements > Liste{% endblock %}

{% block body %}
    <h3>Liste des logements</h3>
    {% for flash_message in app.session.flashBag.get('success') %}
        <div class="alert alert-success">
            {{ flash_message }}
        </div>
    {% endfor %}
    <div class="row">
        <div class="mx-auto col">
            <a href="{{ path('logement_new') }}" class="btn btn-primary">Ajouter un logement</a>
        </div>
    </div>
    <div class="row mx-auto my-2">
            <table class="table">
                <thead>
                    <tr>
                        <th rowspan="2">Nom</th>
                        <th rowspan="2">Description</th>
                        <th rowspan="2">Type</th>             
                        <th rowspan="2">Prix</th>
                        <th rowspan="2"></th>
                    </tr>
                </thead>
                <tbody>
                {% for logement in logements %}
                    <tr>
                        <td>{{ logement.nom }}</td>
                        <td>{{ logement.description }}</td>
                        <td>{{ logement.getIdType().getType() }}</td>
                        <td>{{ logement.prix }} €</td>
                        <td>
                            <a href="{{ path('utilisateur_edit', {'id': logement.getIdProprietaire().getId()}) }}" class="btn btn-primary" title="Voir le propriétaire du logement">V</a>
                            <a href="{{ path('logement_edit', {'id': logement.id}) }}" class="btn btn-success" title="Modifier le logement">M</a>
                            <a href="{{ path('logement_delete', {'id': logement.id}) }}" class="btn btn-danger" title="Supprimer le logement">S</a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="8">Aucun résultat</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
{% endblock %}
