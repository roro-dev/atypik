{% extends 'base.html.twig' %}
{% block title %}Ajout d'un logement{% endblock %}

{% block body %}
    <div id="formulaire">
        <img src="/img/chair.jpeg"/>
    </div>
    <div class="container">    
        {# <div class="row mx-auto my-2">
            <a href="{{ path('logement_liste') }}">Retour</a>
        </div> #}
        <h3>Ajoutez votre bien !</h3>
        {% for flash_message in app.session.flashBag.get('error') %}
            <div class="alert alert-error">
                {{ flash_message }}
            </div>
        {% endfor %}   
        <br>
        {{ form_start(form) }}
            <div class="form-group" >
                {{ form_row(form.id_type) }}
            </div>
            <div class="form-group">
                {{ form_row(form.nom) }}
            </div>
            <div class="form-group">
                {{ form_row(form.description) }}
            </div>
            <div class="form-group">
                {{ form_row(form.adresse) }}
            </div>
            <div class="form-group">
                {{ form_row(form.codePostal) }}
            </div>
            <div class="form-group">
                <label for="logement_ville">Ville</label>
                <input type="text" class="form-control" autocomplete="off" id="logement_ville" name="logement_ville" required="required"/>
            </div>
            <div class="form-group" required="required">
                {{ form_row(form.prix) }}
            </div>
            <div class="form-group">
                {{ form_row(form.nbPersonne) }}
            </div>
            <div class="form-group">
                {{ form_row(form.nbCouchage) }}
            </div>
            <div class="form-group">
                {{ form_row(form.commodites) }}
            </div>
            <div class="form-group">
                {{ form_row(form.reglement) }}
            </div>
            <div class="form-group">
                {{ form_row(form.photosUploads) }}
            </div>
            <br>
            <h4>Param√®tres de l'habitat</h4>
            <div id="parametres"></div>
            <br>
            <button class="btn btn-success btn-lg ml-auto d-flex">Ajoutez votre bien</button>
        {{ form_end(form) }}
    </div>
{% endblock %}