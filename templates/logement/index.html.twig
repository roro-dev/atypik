{% extends 'base.html.twig' %}

{% block title %}Logement index{% endblock %}

{% block body %}
    <h1>Logement index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Description</th>
                <th>NbVoyageur</th>
                <th>NbLits</th>
                <th>NbSalledeBain</th>
                <th>Prix</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for logement in logements %}
            <tr>
                <td>{{ logement.id }}</td>
                <td>{{ logement.nom }}</td>
                <td>{{ logement.description }}</td>
                <td>{{ logement.nbVoyageur }}</td>
                <td>{{ logement.nbLits }}</td>
                <td>{{ logement.nbSalledeBain }}</td>
                <td>{{ logement.prix }}</td>
                <td>
                    <a href="{{ path('logement_show', {'id': logement.id}) }}">show</a>
                    <a href="{{ path('logement_edit', {'id': logement.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('logement_new') }}">Create new</a>
{% endblock %}
