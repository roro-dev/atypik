<div id="formulaire">
<div id="transparence-form-prod"></div>
  <button type="button" class="btn btn-photo"  onclick="openModal();currentSlide(1)">Voir les photos</button>
  <img src="/img/cabane2.jpg"/>

</div>

<div id="myModalSlider" class="modalSlider">
  <span class="close cursor" onclick="closeModal()">&times;</span>
  <div class="modal-contentSlider">

    <div class="mySlides">
      <div class="nombre">1 / 4</div>
      <img src="/img/cabane2.jpg" style="width:100%">
    </div>

    <div class="mySlides">
      <div class="nombre">2 / 4</div>
