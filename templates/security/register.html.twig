{% extends 'base.html.twig' %}
{% block title %}Inscription{% endblock %}    
{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-sm-12">
                <h3>Inscrivez-vous</h3>
                {% for flash_message in app.session.flashBag.get('error') %}
                    <div class="alert alert-danger">
                        {{ flash_message }}
                    </div>
                {% endfor %}
                {{ form_start(form) }}
                <div class="row">
                    <div class="col">
                        <div class="form-group">
                            {{ form_row(form.nom) }}
                        </div>
                    </div>
                    <div class="col">
                        <div class="form-group">
                            {{ form_row(form.prenom) }}
                        </div>
                    </div>
                </div>
               
                <br>
                <div class="row">
                    <div class="col">
                        <div class="form-group">
                            {{ form_row(form.email) }}
                        </div>
                    </div>
                </div>
                <br>
                <div class="row">
                    <div class="col">
                        <div class="form-group">
                            {{ form_row(form.telephone) }}
                        </div>
                    </div>
                </div>
             
                <br>
                <div class="row">
                    <div class="col">
                        <div class="form-group" >
                            {{ form_row(form.adresse) }}
                        </div>
                    </div>
                </div>
        
                <br>
                <div class="row">
                    <div class="col">
                         <div class="form-group" >
                        {{ form_row(form.plainPassword.first) }}
                        </div>
                    </div>
                </div>
                <br>
                <div class="row">
                    <div class="col">
                     <div class="form-group" >
                        {{ form_row(form.plainPassword.second) }}
                         </div>
                    </div>
                </div>
                       
                <br>
                <div class="row">
                    <div class="col">
                        {{ form_widget(form.cgv) }}&nbsp;&nbsp; J'accepte les <a href="/downloads/cgu.pdf" target="_blank">Conditions Générale d'Utilisation.</a>
                    </div>
                </div>
                <br>
                <div class="row">
                    <div class="col">
                        {{ form_widget(form.newsletter) }}&nbsp;&nbsp; J'accepte de recevoir les newsletter d'Atypik'House.
                    </div>
                </div>
                <br>
                <div class="row">
                    <div class="col">
                        <button type="submit" class="btn btn-success ml-auto d-flex btn-lg" style="height: initial;">S'inscrire !</button>
                    </div>
                </div>
                
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}